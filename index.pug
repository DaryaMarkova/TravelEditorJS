doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")

    title Travel editor
    
    body
      // map containers
      div#map.map

      // map zoomer
      div#map-zoomer
        button.btn.btn-light.zoom_up(type="button") +
        button.btn.btn-light.zoom_down(type="button") -

      // map context menu
      div#context-menu
        div.card

      // map control panel
      div#control-panel
        div.card
          div.card-body
            h5.card-title Map tools
        	
      include src/editors/country-editor/template.pug
      include src/editors/country-editor/controls/context.menu.pug
      include src/editors/marker-editor/controls/context.menu.pug
      include src/editors/marker-editor/template.pug
      //move to controll panel aftewords
      div.marker-overlay-container
        span.marker-label-overlay.badge.badge-light
      nav#app-header.navbar.navbar-dark.bg-primary
        a.navbar-brand(href='#') TravelTouch
         img(src='./assets/icon_globe.svg')
        div.user-profile
         span Nastya Markova
         a.btn-logout.btn
          img(src='./assets/logout_icon.svg')
        form.form-inline
         button(type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false").btn.btn-default.dropdown-toggle.mr-sm-2 My subscriptions
           span.caret
         ul.dropdown-menu
          li
            img.user-avatar(src='./assets/user_icon.png') 
            a(href='#') Irina Kuznetsova
          li
           img.user-avatar(src='./assets/user_icon5.png')  
           a(href='#') Natalya Muratova 
          li 
           img.user-avatar(src='./assets/user_icon6.png')
           a(href='#') Pavel Osipov

      div.toast#notification(role="alert" aria-live="assertive" aria-atomic="true")
       .toast-header
        strong.mr-auto New notification
        small 2 mins ago
        button(type="button" data-dismiss="toast" aria-label="Close").ml-2.mb-1.close
         span(aria-hidden="true") &times;
       .toast-body
        b Pavel Osipov has just published from Moscow